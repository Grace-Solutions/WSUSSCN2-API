# Environment configuration for WSUSSCN2-API

# PostgreSQL
PG_HOST=db
PG_PORT=5432
PG_DATABASE=wsus
PG_USER=postgres
PG_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=change_me_in_production

# Update fetcher
CAB_SYNC_INTERVAL=1d12h             # Human-readable durations (e.g., 4h30m, 2d, 1year)
GROUP_STRATEGY=Year-OS              # Grouping: OS, Year, Year-Month, ProductFamily, Year-OS

# UI login
UI_DEFAULT_USER=admin
UI_DEFAULT_PASSWORD=change_me_in_production

# API configuration
API_PORT=5000
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=Information
